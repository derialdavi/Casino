<body class="text-center">
    <section class="vh-100 gradient-custom">
        <form action="../registerValidation/" method="post">
            <div class="container py-5 h-10">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">
                        <h2 class="fw-bold mb-2 text-uppercase">Registrati</h2>
                        
                        <div class="form-outline form-white mb-4">
                            <input type="text" id="typeEmailX" class="form-control form-control-lg" name="name"/ required>
                            <label class="form-label" for="typeEmailX">Nome</label>
                        </div>

                        <div class="form-outline form-white mb-4">
                            <input type="text" id="typeEmailX" class="form-control form-control-lg" name="surname"/ required>
                            <label class="form-label" for="typeEmailX">Cognome</label>
                        </div>

                        <div class="form-outline form-white mb-4">
                            <input type="text" id="typeEmailX" class="form-control form-control-lg" name="username"/ required>
                            <label class="form-label" for="typeEmailX">Username</label>
                        </div>

                        <div class="form-outline form-white mb-4">
                            <input type="text" id="typeEmailX" class="form-control form-control-lg" name="email"/ required>
                            <label class="form-label" for="typeEmailX">Email</label>
                        </div>

                        <div class="form-outline form-white mb-4">
                            <input type="password" id="typePasswordX" class="form-control form-control-lg" name="password"/ required>
                            <label class="form-label" for="typePasswordX">Password</label>
                        </div>
                        
                        <div class="form-outline form-white mb-4">
